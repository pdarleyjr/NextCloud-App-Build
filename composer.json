{
    "name": "pdarleyjr/nextcloud-app-build",
    "description": "A NextCloud app build repository",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "pdarleyjr",
            "email": "pdarleyjr@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.72",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "PdarleyJr\\NextcloudAppBuild\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PdarleyJr\\NextcloudAppBuild\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix --dry-run --diff",
        "lint:fix": "php-cs-fixer fix",
        "analyze": "phpstan analyse --level=6 lib/",
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable"
}