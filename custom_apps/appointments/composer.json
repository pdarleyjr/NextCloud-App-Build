{
    "name": "nextcloud/appointments",
    "description": "Therapist appointment scheduling app for Nextcloud",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "NextCloud App Build"
        }
    ],
    "require": {
        "php": ">=7.4",
        "square/square": "^17.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "nextcloud/coding-standard": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "OCA\\Appointments\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OCA\\Appointments\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "find . -name \\*.php -not -path './vendor/*' -not -path './build/*' -print0 | xargs -0 -n1 php -l",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "test": "phpunit -c phpunit.xml",
        "test:coverage": "phpunit -c phpunit.xml --coverage-clover=coverage.xml"
    }
}